<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body style="background: linear-gradient(to bottom, #b5b9de,white); min-height: 100vh; margin: 0;font-family: Roboto,Ubuntu;">
    <%- include("../articles/nav_bar") %>
  
      <section class="text-center">
        <!-- Background image -->
        <div class="p-4 bg-image" style="
    background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
    background-size: cover;
    background-position: center;
    height: 200px;
    background-blend-mode: overlay;
                "></div>
        <!-- Background image -->
        <div class="container d-flex justify-content-center">
          <div class="col-sm-10 col-md-8 col-lg-8"> <!-- Adjust the width -->
            <div class="card mx-4 mx-md-5 shadow-5-strong bg-body-tertiary" style="
                    margin-top: -100px;
                    backdrop-filter: blur(30px);
                    padding: 20px;
                  ">
              <div class="card-body py-4 px-md-4"> <!-- Reduce padding -->
                <div class="row d-flex justify-content-center">
                  <div class="col-lg-10">
                    <h2 class="fw-bold mb-4">Create Account</h2>
                    <form action="/account/signup" method="POST">
                      <div class="row">
                        <div class="col-md-6 mb-3">
                          <div class="form-outline">
                            <input type="text" id="fname" name="fname" class="form-control" />
                            <label class="form-label ms-1" for="fname">First name</label>
                          </div>
                        </div>
                        <div class="col-md-6 mb-3">
                          <div class="form-outline">
                            <input type="text" id="lname" name="lname" class="form-control" />
                            <label class="form-label ms-1" for="lname">Last name</label>
                          </div>
                        </div>
                      </div>
                      <div class="form-outline mb-3">
                        <input type="text" id="username" name="username" class="form-control" />
                        <label class="form-label ms-1" for="username">Enter username</label>
                      </div>
  
                      <div class="form-outline mb-3">
                        <input type="email" id="email" name="email" class="form-control" />
                        <label class="form-label ms-1" for="email">Email address</label>
                      </div>
  
                      <div class="form-outline mb-3">
                        <input type="password" id="password" name="password" class="form-control" />
                        <label class="form-label ms-1" for="password">Password</label>
                      </div>
                      <div><% if (typeof error !== "undefined" && error) { %>
                        <div class="alert alert-danger">
                          <%= error %>
                        </div>
                      <% } %></div>
  
                      <button type="submit" class="btn btn-primary btn-block mt-3 mb-3">
                        Submit
                      </button>
                      <hr>
                      <div class="text-center mt-3">
                        <p>Have An Existing Account</p>
                        <a href="../account/login" class="btn btn-secondary btn-block mb-3">
                          Login
                        </a>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
  
        <!-- Section: Design Block -->
  


    
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
